{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": [
      "./@types",
      "../node_modules/@types"
    ],
    "paths": {
      "*": [
        "@types/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "allowJs": true
  },
  "awesomeTypescriptLoaderOptions": {},
  "compileOnSave": false,
  "buildOnSave": false
}